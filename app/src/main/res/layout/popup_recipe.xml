<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4D0A1">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <!-- please refer to this link when coding in onclick for add new ingredient
 https://stackoverflow.com/questions/6930604/android-add-textview-to-layout-when-button-is-pressed/6932540#6932540-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:text="Recipe Name :" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/userName"
                android:layout_width="360dp"
                android:gravity="center_horizontal"
                android:hint="Input name of recipe"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView

                android:gravity="left"
                android:text="Recipe Instructions : " />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <EditText
                android:id="@+id/ingredient"
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:gravity="center_horizontal"
                android:hint="Write your recipe here"
                android:inputType="textMultiLine"

                android:paddingLeft="10dp" />

        </TableRow>


        <TableRow
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </TableRow>


        <TableRow
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
